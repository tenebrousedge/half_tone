= form_for @comic do |f|
  - if @comic.errors.any?
    #error_explanation
      %h2= "#{pluralize(@comic.errors.count, "error")} prohibited this comic from being saved:"
      %ul
        - @comic.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :subtitle
    = f.text_field :subtitle
  .field
    = f.label :published_at
    = f.datetime_select :published_at
  .field
    = f.label :author
    = f.text_field :author
  .actions
    = f.submit 'Save'
